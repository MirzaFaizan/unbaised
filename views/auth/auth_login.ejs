<body>
  <div class="container-fluid text-center">
    <div class="row">
      <div class="col-md-5 sticky-top shadow custom-nav d-flex flex-column justify-content-center align-items-center">
        <div class="nav">
          <a class="navbar-brand" href="/">
            <img src="/images/icon.png" class="d-inline-block align-top rotate" />
          </a>
        </div>
      </div>
      <div class="col-md-7 d-flex justify-content-center align-items-center">
        <div id="container">
          <% if (message != undefined) { %>
          <div class="alert alert-primary text-center" role="alert">
            <%= message %>
          </div>
          <% } %>
          <div class="card text-center">
            <h5 class="card-header">Login</h5>
            <div class="card-body">
              <img src="images/default.png" height="134" width="134" /><br /><br />
              <form action="/login" method="post">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                  </div>
                  <input class="form-control" name="username" type="text" placeholder="Username" required
                    maxlength="30" />
                </div>
                <br />
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
                  </div>
                  <input class="form-control" name="password" type="password" placeholder="Password" required
                    maxlength="30" />
                </div>
                <br />
                <button class="btn bg-navy text-light" type="submit" style="width:100%;">
                  Enter
                </button>
                <span class="text-dark" id="lower">Not a member?
                  <a class="text-dark" href="/register">Join now</a></span>
              </form>
            </div>
          </div>
          <a href="/" class="text-center text-dark">Continue Without Signing In.</a>
        </div>
      </div>
    </div>
  </div>
</body>

</html>