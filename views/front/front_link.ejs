<!DOCTYPE html>
<html lang="en">
<link rel="icon" type="image/png" href="/images/unbiased.png" />
<%- include('../partials/head', {title: "Unbiased - new link"}) %>

<body>
  <!-- <%- include('../partials/nav', {user: locals.user, karma}) %> -->
  <span id="auth"><%= isAuth %></span>
  <div class=" bg-transparent shadow">
    <div class="nav container">
      <a class="navbar-brand" href="/">
        <img src="/images/icon.png" class="d-inline-block align-top rotate" />
      </a>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="main col-md-10">
        <%- include('../partials/jumbotron', {name: "Post New Link",
          subtitle:"Post New Articles To Be Voted On."}) %>
        <!-- <h4 class="display-4">Post a new Link</h4> -->
        <div class="submit-wrapper">
          <% if(!locals.user) { %> You must be logged in to submit a link. <%
            } else { %>

          <form id="form-post-or-link" class="bg-transparent" action="/submit/link" method="post">
            <input type="text" class="form-control" name="title" placeholder="Enter Header of Article..."
              required /><br />
            <input type="text" class="form-control" name="link" placeholder="Enter link..." required /><br />
            <input type="hidden" class="form-control" name="subreddit" id="subreddit_form" placeholder="Enter subbeddit"
              value="gaming" required />
            <select name="image" id="image" class="custom-select mb-3" required>
              <option value="Nytimes.png">New York Times</option>
              <option value="Washington.png">Washington Post</option>
              <option value="Usa.png">USA Today</option>
              <option value="Wsj.png">Wall Street Journal</option>
              <option value="Latimes.png">Los Angeles Times</option>
              <option value="Nypost.png">New York Post</option>
              <option value="Boston.png">The Boston Globe</option>
              <option value="Sfc.png">San Francisco Chronicle</option>
              <option value="Chicago.png">The Chicago Tribune</option>
              <option value="Msnbc.png">MSNBC</option>
              <option value="Cnn.png">CNN</option>
              <option value="Fox.png">Fox News</option>
              <option value="Abc.png">ABC News</option>
              <option value="Cbs.png">CBS News</option>
              <option value="Reuters.png">Reuters</option>
              <option value="Yahoo.png">Yahoo News</option>
              <option value="Google.png">Google News</option>
              <option value="other.png">Others</option>
            </select>
            <button type="submit" class="btn bg-navy text-white auth-req" id="link-submit-button">
              Submit
            </button>
          </form>

          <% } %>
        </div>
      </div>
      <div class="col-md-2">
        <iframe class="iframe mt-1" src="http://www.urldelivery.com/watchnew?key=ba5ec8d8ae63098b6cb367cdbf39871e"
          frameborder="0" height="500" width="160" scrolling="no"></iframe>
      </div>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/10.7.1/validator.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/autosize@4.0.2/dist/autosize.min.js"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  <script src="/js/index.js"></script>
  <script src="/js/submit.js"></script>
</body>

</html>